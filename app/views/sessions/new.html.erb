<h1>Login</h1>

<p id="notice"><%= notice %></p>

<%= form_with(model: nil) do |form| %>
  <%= form.hidden_field :redirect_to, value: params[:redirect_to] %>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
